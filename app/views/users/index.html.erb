<%= stylesheet_link_tag "users" %>
<a href="<%= new_user_post_path(current_user) %>">
  <h2>Create new post</h2>
</a>
<div class="users">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li class="users-list-item">
        <%= render "shared/user", user: user %>
      </li>
    <% end %>
  </ul>
</div>
