<%= form_with model: [@user, @post], url: user_posts_path(@user) do |form| %>
  <div class="form-title field">
    <%= form.label :title %>:
    <%= form.text_field :title %>
  </div>
  <div class="form-text field">
    <%= form.label :text %>:
    <%= form.text_area :text %>
  </div>
  <%= form.submit "Create Post" %>
  <%= render "shared/flashes" %>
<% end %>
