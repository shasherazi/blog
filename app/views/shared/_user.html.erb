<ul class="users-list">
  <% @users.each do |user| %>
    <li class="users-list-item">
      <div class="user">
        <img src="<%= user.photo %>" alt="avatar"/>
        <a href="<%= user_path(user) %>">
          <h3><%= user.name %></h3>
        </a>
        <p class="num-of-posts">Number of posts:
          <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>
